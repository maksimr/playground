{
  "name": "playground",
  "version": "0.0.0",
  "main": "./src/index.js",
  "scripts": {
    "start": "webpack-dev-server -d --disable-host-check --host 0.0.0.0 --port 3000",
    "start:gitpod": "npm start -- --public $(gp url 3000)",
    "build": "webpack -p",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/eslint-parser": "7.11.5",
    "eslint": "7.9.0",
    "webpack-dev-server": "3.11.0",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "jest": "26.4.2",
    "jest-cli": "26.4.2"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-undef": "warn",
      "no-unused-vars": "warn",
      "valid-jsdoc": [
        "warn",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  }
}
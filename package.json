{
  "name": "playground",
  "version": "0.0.0",
  "main": "./src/index.js",
  "scripts": {
    "start": "webpack serve --mode development --devtool eval-source-map --history-api-fallback --host 0.0.0.0 --client-web-socket-url auto://0.0.0.0:0/ws",
    "build": "webpack --mode production",
    "test": "jest --passWithNoTests",
    "test:type": "tsc",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "typescript": "4.5.5",
    "@babel/core": "7.16.10",
    "@babel/preset-env": "7.16.11",
    "@babel/eslint-parser": "7.16.5",
    "babel-loader": "8.2.3",
    "style-loader": "3.3.1",
    "css-loader": "6.5.1",
    "html-webpack-plugin": "5.5.0",
    "webpack": "5.66.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.7.3",
    "eslint": "8.7.0",
    "jest": "27.4.7",
    "jest-cli": "27.4.7"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-undef": "warn",
      "no-unused-vars": "warn",
      "valid-jsdoc": [
        "warn",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  }
}
